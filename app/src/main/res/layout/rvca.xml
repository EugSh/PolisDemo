<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/rvca_recycler_view_category_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textSize="22dp"
        android:textColor="@color/black"
        android:text="MONTH"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.flexbox.FlexboxLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rvca_flexbox"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:alignItems="flex_start"
        app:flexDirection="row"
        app:flexWrap="wrap"
        android:padding="5dp"
        android:layout_margin="@dimen/margin_small"
        app:layout_constraintTop_toBottomOf="@id/rvca_recycler_view_category_name"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:id="@+id/rvca_line"
        android:background="@color/colorPrimary"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rvca_flexbox">

    </View>
</androidx.constraintlayout.widget.ConstraintLayout>